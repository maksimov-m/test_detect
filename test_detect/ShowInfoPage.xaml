<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="test_detect.ShowInfoPage"
             Title="Информация"
             xmlns:view="clr-namespace:test_detect"
             x:DataType="view:ShowInfoViewModel"
             Background="Azure"
             >


    <StackLayout Orientation="Vertical">

        <Frame BackgroundColor="Black" CornerRadius="0">
            <Image x:Name="photo" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="500" WidthRequest="500" Aspect="Fill" />
        </Frame>


        <Frame VerticalOptions="EndAndExpand" Margin="10">
            <ScrollView>
                <StackLayout>
                    <!--<Image x:Name="photo"/>-->
                    <Label x:Name="textView" Text="Сделайте фото" TextColor="Black" HorizontalOptions="Center" Padding="20" FontSize="20"/>
                </StackLayout>
            </ScrollView>
        </Frame>


    </StackLayout>
    
</ContentPage>